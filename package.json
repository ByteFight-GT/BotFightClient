{
  "name": "bytefight-client-2026",
  "version": "1.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "description": "Bytefight 2026 Desktop Client",
  "author": "Henry Liao <hliao62@gatech.edu>",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "fixindex": "node update-index.js",
    "package": "next build && npm run fixindex && electron-builder build --publish never && npm run build:dll",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "electron:serve": "concurrently \"cross-env BROWSER=none npm run dev\" \"npm run electron:start\"",
    "electron:build": "next build && npm run fixindex && electron-builder",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "dependencies": {
    "@electron/asar": "^4.0.1",
    "@electron/remote": "^2.1.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tabler/icons-react": "^3.31.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^10.0.0",
    "lucide-react": "^0.562.0",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "ps-tree": "^1.2.0",
    "react": "^19.0.1",
    "react-collapsed": "^4.2.0",
    "react-dom": "^19.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "build": {
    "appId": "com.bytefight.bytefightclient2026",
    "productName": "Bytefight Client 2026",
    "forceCodeSigning": false,
    "files": [
      {
        "from": "out/",
        "to": "",
        "filter": [
          "**/*"
        ]
      },
      "main.js",
      "preload.js",
      "package.json",
      "ipc/**"
    ],
    "extraResources": [
      {
        "from": "engine/",
        "to": "engine/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "target": [
      "dmg",
      "zip",
      "nsis",
      "AppImage",
      "deb",
      "rpm",
      "snap"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "default",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    }
  }
}
